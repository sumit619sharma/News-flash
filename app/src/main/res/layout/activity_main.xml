<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/greyl">

     <LinearLayout
         android:id="@+id/fltout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_margin="5dp"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent">

         <ImageView
             android:id="@+id/fltimg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/filter_shape"
             android:src="@drawable/ic_baseline_filter_list_24"
             android:padding="5dp"
             android:layout_margin="5dp"/>

         <TextView
             android:id="@+id/no_filter"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:text="@string/no_filter"
             android:padding="5dp"
             android:layout_margin="5dp"
             android:background="@drawable/filter_shape"/>

         <TextView
             android:id="@+id/lth"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:text="@string/low_to_high"
             android:padding="5dp"
             android:layout_margin="5dp"
             android:background="@drawable/filter_shape"/>

         <TextView
             android:id="@+id/htl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:text="@string/high_to_low"
             android:padding="5dp"
             android:layout_margin="5dp"
             android:background="@drawable/filter_shape"/>

     </LinearLayout>
